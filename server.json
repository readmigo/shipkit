{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "name": "io.github.readmigo/shipkit",
  "description": "Unified app publishing MCP Server for Google Play, App Store, and 10+ Chinese stores",
  "repository": {
    "url": "https://github.com/readmigo/shipkit",
    "source": "github"
  },
  "version": "0.1.1",
  "packages": [
    {
      "registryType": "npm",
      "identifier": "@readmigo/shipkit-mcp",
      "version": "0.1.1",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "description": "ShipKit API key for authentication",
          "isRequired": false,
          "format": "string",
          "isSecret": true,
          "name": "SHIPKIT_API_KEY"
        },
        {
          "description": "Path to SQLite database file (default: ~/.shipkit/jobs.db)",
          "isRequired": false,
          "format": "string",
          "isSecret": false,
          "name": "SHIPKIT_DB_PATH"
        }
      ]
    }
  ],
  "remoteEndpoints": [
    {
      "url": "https://shipkit.mcloud88.com/mcp",
      "transport": {
        "type": "streamable-http"
      }
    }
  ]
}
